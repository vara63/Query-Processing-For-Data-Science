#code:-
import pandas as pd
import numpy as np
import webbrowser
import os
df = pd.DataFrame(
    np.random.randn(10, 4),
    columns=['A', 'B', 'C', 'D']
)
print("DataFrame:")
print(df)
print("\nBackground Color → Black")
print("Font Color → Yellow")

styled_df = df.style.set_properties(**{
    'background-color': 'black',
    'color': 'yellow'
})

file_name = "dataframe_style.html"
styled_df.to_html(file_name)
webbrowser.open('file://' + os.path.realpath(file_name))

